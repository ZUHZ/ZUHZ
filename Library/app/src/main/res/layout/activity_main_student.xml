<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.sookmyung.library.main_student">

    <Button
        android:id="@+id/btn_rent_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도서 대출"/>

    <Button
        android:id="@+id/btn_return_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도서 반납"
        android:layout_below="@+id/btn_rent_book" />

    <Button
        android:id="@+id/btn_search_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도서 검색"
        android:layout_below="@+id/btn_rent_book"/>

    <Button
        android:id="@+id/btn_show_rented_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대출 기록 조회"
        android:layout_below="@+id/btn_search_book" />


</LinearLayout>
